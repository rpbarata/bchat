<!DOCTYPE html>
<html>
  <head>
    <title>Bchat</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <div class="container-fluid notice-container">
        <p id="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if alert %>
      <div class="container-fluid alert-container">
        <p id="alert"><%= alert %></p>
      </div>
    <% end %>

    <div class="container">
      <div class="row">
        <div class="col">
          <%= render partial: "layouts/navigation_bar" %>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
